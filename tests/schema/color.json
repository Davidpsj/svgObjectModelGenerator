{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "/color",
	"title": "color",
	"description": "The color object",
	"type": "object",
	"properties": {
		"mode": {
			"enum": ["RGB"]
		},
		"value": {
			"type": "object",
			"properties": {
				"r": {
					"type": "number",
					"minumum": 0,
					"maximum": 255
				},
				"g": {
					"type": "number",
					"minumum": 0,
					"maximum": 255
				},
				"b": {
					"type": "number",
					"minumum": 0,
					"maximum": 255
				}
			}
		},
		"alpha": {
			"type": "number",
			"minumum": 0,
			"maximum": 1
		},
		"meta": {
			"type": "object"
		}
	},
	"additionalProperties": false,
	"required": [ "mode", "value" ]
}