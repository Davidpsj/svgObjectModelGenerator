{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/image",
    "title": "image",
    "description": "A image graphics object",
    "type": "object",
    "properties": {
        "bounds": {
            "$ref": "/bounds",
            "description": "The boundaries of the image in local coordinates."
        },
        "href": {
            "type": "string",
            "description": "A base64 encoded image or a reference to an external image. The reference may be managed by a DCX manifest file."
        },
        "meta": {
            "type": "object"
        },
        "name": {
            "description": "The user specified name of the graphics object",
            "type": "string"
        },
        "style": { "$ref": "/style" },
        "transform": {
            "oneOf": [
                { "$ref": "/transform2d" },
                { "$ref": "/transform3d" }
            ]
        },
        "type": {
            "description": "The type of the graphics object",
            "enum": [ "image" ]
        },
        "visible": {
            "description": "Whether the graphics object is visible or not",
            "type": "boolean"
        },
        "visualBounds": { "$ref": "/bounds" }
    },
    "additionalProperties": false,
    "required": [ "bounds", "href", "type" ]
}