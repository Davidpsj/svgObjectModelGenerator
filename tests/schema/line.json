{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/line",
    "title": "line",
    "description": "A line shape graphics object",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object"
        },
        "name": {
            "description": "The user specified name of the graphics object",
            "type": "string"
        },
        "shape": {
            "type": "object",
            "description": "A representation of a line",
            "properties": {
                "meta": {
                    "type": "object"
                },
                "type": {
                    "description": "The type of shape",
                    "enum": [ "line" ]
                },
                "x1": {
                    "description": "The horizontal coordinate of the first position",
                    "type": "number"
                },
                "x2": {
                    "description": "The horizontal coordinate of the second position",
                    "type": "number"
                },
                "y1": {
                    "description": "The vertical coordinate of the first position",
                    "type": "number"
                },
                "y2": {
                    "description": "The vertical coordinate of the second position",
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": [ "x1", "y1", "x2", "y2" ]
        },
        "style": { "$ref": "/style" },
        "transform": {
            "oneOf": [
                { "$ref": "/transform2d" },
                { "$ref": "/transform3d" }
            ]
        },
        "type": {
            "description": "The type of the graphics object",
            "enum": [ "line" ]
        },
        "visible": {
            "description": "Whether the graphics object is visible or not",
            "type": "boolean"
        },
        "visualBounds": { "$ref": "/bounds" }
    },
    "additionalProperties": false,
    "required": [ "shape", "type" ]
}