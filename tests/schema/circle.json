{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/circle",
    "title": "circle",
    "description": "A circle shape graphics object",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the graphics object",
            "enum": [ "shape" ]
        },
        "name": {
            "description": "The user specified name of the graphics object",
            "type": "string"
        },
        "shape": {
            "type": "object",
            "description": "A representation of a circle",
            "properties": {
                "cx": {
                    "description": "The horizontal coordinate of the circle",
                    "type": "number"
                },
                "cy": {
                    "description": "The vertical coordinate of the circle",
                    "type": "number"
                },
                "r": {
                    "description": "The radius of the circle",
                    "type": "number",
                    "minimum": 0
                },
                "type": {
                    "description": "The type of shape",
                    "enum": [ "circle" ]
                }
            },
            "required": [ "cx", "cy", "r", "type" ]
        },
        "style": { "$ref": "/style" },
        "transform": {
            "type": "object",
            "oneOf": [
                { "$ref": "/transform2d" },
                { "$ref": "/transform3d" }
            ]
        },
        "visible": {
            "description": "Whether the graphics object is visible or not",
            "type": "boolean"
        },
        "visualBounds": { "$ref": "/bounds" }
    },
    "required": [ "shape", "type" ]
}