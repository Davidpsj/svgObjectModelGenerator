{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "/polygon",
	"title": "polygon",
	"description": "A polygon shape graphics object",
	"type": "object",
	"properties": {
		"id": {
			"description": "A unique identifier with the document",
			"type": "string"
		},
		"meta": {
			"type": "object"
		},
		"name": {
			"description": "The user specified name of the graphics object",
			"type": "string"
		},
		"shape": {
			"type": "object",
			"description": "A representation of a polygon",
			"properties": {
				"meta": {
					"type": "object"
				},
				"points": {
					"description": "An array of position objects",
					"type": "array",
					"items": { "$ref": "/position" },
					"minItems": 1
				},
				"type": {
					"description": "The type of shape",
					"enum": [ "polygon" ]
				},
				"winding": {
					"description": "The vertical coordinate of the first position",
					"enum": [ "evenodd", "nonzero" ]
				}
			},
			"additionalProperties": false,
			"required": [ "points", "type" ]
		},
		"style": { "$ref": "/style" },
		"transform": {
			"oneOf": [
				{ "$ref": "/transform2d" },
				{ "$ref": "/transform3d" }
			]
		},
		"type": {
			"description": "The type of the graphics object",
			"enum": [ "shape" ]
		},
		"visible": {
			"description": "Whether the graphics object is visible or not",
			"type": "boolean"
		},
		"visualBounds": { "$ref": "/bounds" }
	},
	"additionalProperties": false,
	"required": [ "shape", "type" ]
}
