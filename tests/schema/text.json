{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/text",
    "title": "text",
    "description": "A text shape graphics object",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of the graphics object",
            "enum": [ "text" ]
        },
        "name": {
            "description": "The user specified name of the graphics object",
            "type": "string"
        },
        "shape": {
            "type": "object",
            "description": "A representation of a text",
            "patternProperties": {
                "^[//W//w]+": {
                    "description": "An array of position objects",
                    "type": [ "array", "string", "object", "number", "boolean" ]
                }
            }
        },
        "style": { "$ref": "/style" },
        "transform": {
            "type": "object",
            "oneOf": [
                { "$ref": "/transform2d" },
                { "$ref": "/transform3d" }
            ]
        },
        "visible": {
            "description": "Whether the graphics object is visible or not",
            "type": "boolean"
        },
        "visualBounds": { "$ref": "/bounds" }
    },
    "required": ["type"]
}