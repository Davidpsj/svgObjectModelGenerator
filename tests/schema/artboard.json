{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/artboard",
    "title": "artboard",
    "description": "A artboard graphics object",
    "type": "object",
    "properties": {
        "name": {
            "description": "The user specified name of the graphics object",
            "type": "string"
        },
        "children": {
            "description": "A list of graphics object nested in the current artboard",
            "type": "array",
            "items": {
                "oneOf": [
                    { 
                        "type": "object",
                        "properties": {
                            "type": {
                                "enum": [ "generic" ]
                            }
                        }
                    },
                    { 
                        "type": "object",
                        "properties": {
                            "type": {
                                "enum": [ "background" ]
                            }
                        }
                    },
                    { "$ref": "/rect" },
                    { "$ref": "/circle" },
                    { "$ref": "/ellipse" },
                    { "$ref": "/line" },
                    { "$ref": "/path" },
                    { "$ref": "/polyline" },
                    { "$ref": "/polygon" },
                    { "$ref": "/text" },
                    { "$ref": "/image" },
                    { "$ref": "/reference" },
                    { "$ref": "/group" }
                ]
            }
        },
        "style": { "$ref": "/style" },
        "transform": {
            "type": "object",
            "oneOf": [
                { "$ref": "/transform2d" },
                { "$ref": "/transform3d" }
            ]
        },
        "type": {
            "description": "The type of the graphics object",
            "enum": [ "artboard" ]
        },
        "visible": {
            "description": "Whether the graphics object is visible or not",
            "type": "boolean"
        },
        "visualBounds": { "$ref": "/bounds" }
    },
    "required": [ "children", "type" ]
}