{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/position",
    "title": "position",
    "description": "The position object",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object"
        },
        "x": {
            "description": "The horizontal offset",
            "type": "number"
        },
        "y": {
            "description": "The vertical offset",
            "type": "number"
        }
    },
    "additionalProperties": false,
    "required": [ "x", "y" ]
}